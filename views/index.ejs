<% include partials/header %>
<div class="container">
    <header class =jumbotron>
        <div class="container">
            <h1>Welcome to The Fitness Store</h1>
            <p>We provide you with the best fitness products that you need:</p>
            <!--<%if(currentUser&&currentUser.isAdmin){%>-->
            <a class="btn btn-primary btn-lg" href="/items/new">Add New Item</a>
            <!--<% }%>-->
        </div>    
    </header>
    <div class="row ">
        <%items.forEach(function(item){%>
            <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                    <img src="<%=item.image%>" alt="<%=item.name%>" class="img-responsive">
                    <div class="caption">
                        <h3><%=item.name%></h3>
                        <div class="clearfix">
                            <div class="price pull-left">
                                <i class="fas fa-rupee-sign"></i><%=item.price%>/<%=item.quantity%>
                            </div>
                            <a href="/items/<%=item._id%>" class="btn btn-info pull-right " role="button">More Info</a>
                        </div>
                    </div>
                </div>
            </div>    
        <% }) %>
    </div>
</div>
<% include partials/footer %>