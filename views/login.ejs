<% include partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align:center;">Login</h1>
        <div style="width:30%;margin:25px auto;">
            <form action="/login" method="post" class"col-md-6 col-xs-9 .col-sm-9">
                <div class="form-group">
                    <input class="form-control" type="text" name="username" placeholder="Username">     
                </div> 
                <div class="form-group">
                    <input class="form-control" type="password" name="password" placeholder="Password">     
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-info btn-block">Login</button>
                </div>
            </form>
            <p>New to The Fitness Store? <a href="/register">SignUp</a></p>
            <p>Forgot Password? <a href="/forgot">Recover Password</a></p>
            <p><a href="/items">Go Back</a></p>
        </div>
    </div>
</div>    


