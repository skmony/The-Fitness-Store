<% include partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align:center;">Edit <%=item.name%></h1>
        <div style="width:30%;margin:25px auto;">
            <form action="/items/<%=item._id%>?_method=PUT" method="POST" >
                <div class="form-group">
                    <input class="form-control" type="text" name="item[name]" placeholder="Item name" value="<%=item.name%>">     
                </div> 
                <div class="form-group">
                    <input class="form-control" type="text" name="item[image]" placeholder="Item image" value="<%=item.image%>">     
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="item[price]" placeholder="Item price"value="<%=item.price%>">     
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="item[quantity]" placeholder="Quantity"value="<%=item.quantity%>">     
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="item[desc]" placeholder="Item description"value="<%=item.description%>">     
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-info btn-block">Edit</button>
                </div>
            </form>
        <a href="/items/<%=item._id%>">Go Back</a>
        </div>
    </div>
</div>    


<% include partials/footer %>